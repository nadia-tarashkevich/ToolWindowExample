<!-- Minimal Plugin Configuration File for a Tool Window with a Text Area -->
<idea-plugin>
    <id>org.jetbrains.plugins.toolwindowexample</id>
    <name>Tool Window Text Area Example</name>
    <vendor>nadia-tarashkevich</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.nadiatarashkevich.toolwindowexample.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
    </extensions>
</idea-plugin>
